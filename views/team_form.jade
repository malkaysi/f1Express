extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Team Name:
      input#name.form-control(type='text' placeholder='Team name' name='name' required='true' value=(undefined===team ? '' : team.name) )
      label(for='description') Team Description:
      input#description.form-control(type='text' placeholder='Team description' name='description' required='true' value=(undefined===team ? '' : team.description))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg